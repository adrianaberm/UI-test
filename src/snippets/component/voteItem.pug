each selector in selectors
	// Vote list item
	.rt-vote__item
		.rt-vote__item__img
			img(
				src=selector.image
				alt=selector.imageAlt)
		.rt-vote__item__inner

			//- Item content
			.rt-vote__item__content
				h3(class=selector.voteClass)= selector.label
				p.rt-vote__item_data= selector.date  
					span= selector.section
				p.rt-vote__item__description= selector.description

			//- item vote options
			.rt-vote__item__otions
				input.rt-vote__item__thumbUp(
					type="radio" 
					id= selector.op1
					name= selector.group)
				label(for=selector.op1) Thumbs Up
				input.rt-vote__item__thumbDown(
					type="radio" 
					id= selector.op2
					name= selector.group)
				label(for=selector.op2) Thumbs Down
				button.rt-vote__item__voteNow(type="submit" title="click to vote note") Thumbs Up


			//- item vote Thank you
			.rt-vote__item__voted
				p Thank you for voting
				a.rt-btn(href="#" title="click to vote again") Vote again

			//- vote results
			.rt-vote__results
				.rt-vote__results__thumb.rt-vote__results__thumb-up(style={width: selector.percentageUp+"%"})
					p= selector.percentageUp
						span %

				.rt-vote__results__thumb.rt-vote__results__thumb-down(style={width: selector.percentageDown+"%"})
					p= selector.percentageDown
						span %




	