//- vote items json structure
- var selectors = require("./src/data/data.json");

each selector in selectors
	// Vote list item
	.rt-vote__item
		.rt-vote__item__img
			img(
				src=selector.image
				alt=selector.imageAlt)
		.rt-vote__item__inner

			//- Item content
			.rt-vote__item__content
				h3.rt-vote__item__title(class=selector.voteClass)= selector.label
				p.rt-vote__item__data= selector.date  
					span= selector.section
				.rt-vote__item__description
					p= selector.description
					//- item vote options
					.rt-vote__item__options
						
						
						label.rt-vote__item__label(for=selector.op1) Thumbs Up
							input.rt-vote__item__thumb.rt-vote__item__thumb-up(
								type="radio" 
								id= selector.op1
								name= selector.group
								value="1")
							span.rt-vote__item__check Check
						
						label.rt-vote__item__label(for=selector.op2) Thumbs Down
							input.rt-vote__item__thumb.rt-vote__item__thumb-down(
								type="radio" 
								id= selector.op2
								name= selector.group
								value="2")
							span.rt-vote__item__check Check

						button.rt-btn.rt-vote__item__voteNow(type="submit" title="click to vote note") Vote now


					//- item vote Thank you
					.rt-vote__item__voted
						p.rt-vote__item__description Thank you for voting
						span.rt-btn(role="button" title="click to vote again") Vote again

			//- vote results
			.rt-vote__results
				.rt-vote__results__thumb.rt-vote__results__thumb-up(style={width: selector.percentageUp+"%"})
					p= selector.percentageUp
						span %

				.rt-vote__results__thumb.rt-vote__results__thumb-down(style={width: selector.percentageDown+"%"})
					p= selector.percentageDown
						span %




	