extends ./common/layout.pug

include ./common/sections.pug
include ./common/toc.pug

block nav
  -var selected = 'Utils';

block title
  | Utils

block content
  .SG-row
    .SG-gr-12
      .SG-h1 Utils

  .SG-row
    .SG-gr-6
      .SG-h3 Tabla de contenido
    .SG-gr-6
      .SG-h3 Descripción

  .SG-row
    .SG-gr-6.SG-toc
      +toc(styles.Nuclides)
    .SG-gr-6
      p.SG-p.
         En esta sección se incluyen herramientas como variables scss, mixins, funciones o configuraciones.
      p.SG-p.
        Para añadir una utilidad a esta sección, anótelo con la etiqueta <span class="SG-strong">@nuclide</span>.
      p.SG-p.
        Las formas especiales son <span class="SG-strong">@color</span> and <span class="SG-strong">@mixin</span>.

  if meta.demo
    include ./common/demo.pug

  if styles.Nuclides
    +section-second-level(styles.Nuclides)
